<util:FullScreenEnabledWindow x:Class="Platform.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:util="clr-namespace:Platform.Main.Util" mc:Ignorable="d"
        x:Name="Root" Title="MainWindow" Height="350" Width="525" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel Name="DockPanel">
            <Menu Name="MainMenu" DockPanel.Dock="Top" FontSize="14" Height="22" Background="Transparent"/>
            <WrapPanel Name="ToolBarsPane" DockPanel.Dock="Top"/>
            <!-- Toolbars will be inserted here (index: 1) -->
            <!-- Statusbar will be inserted here (index: Count-2) -->
        </DockPanel>
    </Grid>
</util:FullScreenEnabledWindow>

